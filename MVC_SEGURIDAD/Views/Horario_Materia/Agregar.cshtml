@model MVC_SEGURIDAD.Models.CRUD.HORARIOMATERIAcrudInsert
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar</h2>

<br />
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Agregar", "Horario_Materia", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { @class = "tex-danger" })
            <div>
                @Html.LabelFor(d => d.idcodigo_horariomateria)
                @Html.TextBoxFor(d => d.idcodigo_horariomateria, new { @class = "form-control" })
                @Html.ValidationMessage("codigo", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(d => d.horario)
                @Html.TextBoxFor(d => d.horario, new { @class = "form-control" })
                @Html.ValidationMessage("horario", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(d => d.materia)
                @Html.TextBoxFor(d => d.materia, new { @class = "form-control" })
                @Html.ValidationMessage("horario", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(d => d.docente)
                @Html.TextBoxFor(d => d.docente, new { @class = "form-control" })
                @Html.ValidationMessage("docente", new { @class = "text-danger" })
            </div>

            <div style="text-align:right">
                <input type="submit" class="btn btn-success" value="Guardar" />

            </div>

        }
    </div>
</div>