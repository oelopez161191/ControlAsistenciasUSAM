
@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consultar Grupos</h2>

<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Grupos/Agregar")'" value="Nuevo" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>id_grupo</th>
                <th>horario_materia</th>
            </tr>

            @foreach (var oModelo in Model)
            {
                <tr>
                    <td>@oModelo.id_grupo</td>
                    <td>@oModelo.horario_materia</td>
                    <td>
                        <input type="button" onclick="document.location.href='@Url.Content("~/Grupos/Actualizar/"+oModelo.id_grupo)'" value="Editar" class="btn btn-default" />
                    </td>

                </tr>

            }


        </table>
    </div>
</div>

