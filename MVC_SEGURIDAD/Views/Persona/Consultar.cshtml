<!-- Metodo que se utiliza para listar -->
@model List<MVC_SEGURIDAD.Models.CRUD.PERSONAvista>
@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consultar</h2>


<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Persona/Agregar")'" value="Nuevo" />
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Genero</th>
                <th>Codigo usuario</th>
            </tr>

            @foreach (var oModelo in Model)
            {
                <tr>
                    <td>@oModelo.CODPERSONA</td>
                    <td>@oModelo.NOMBRES</td>
                    <td>@oModelo.APELLIDOS</td>
                    <td>@oModelo.GENERO</td>
                    <td>@oModelo.CODUSER</td>
                    <td>
                        <input type="button" onclick="document.location.href='@Url.Content("~/Persona/Delete/"+oModelo.CODPERSONA)'" value="Eliminar" class="btn btn-danger" />
                        <input type="button" onclick="document.location.href='@Url.Content("~/Persona/Actualizar/"+oModelo.CODPERSONA)'" value="Editar" class="btn btn-default" />
                    </td>

                </tr>

            }


        </table>
    </div>
</div>


