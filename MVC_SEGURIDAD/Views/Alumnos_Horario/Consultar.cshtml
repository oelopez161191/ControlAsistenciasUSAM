<!-- Metodo que se utiliza para listar -->
@model List<MVC_SEGURIDAD.Models.CRUD.Alumnos_Horariovista>
@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consultar</h2>

<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Alumnos_Horario/Agregar")'" value="Nuevo" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Horario</th>
                <th>Materia</th>
                <th>Docente</th>
            </tr>

            @foreach (var oModelo in Model)
            {
        <tr>
            <td>@oModelo.codigo_horariomateria</td>
            <td>@oModelo.horario</td>
            <td>@oModelo.materia</td>
            <td>@oModelo.docente</td>
            <td>
                <input type="button" onclick="document.location.href='@Url.Content("~/Horario_Materia/Actualizar/"+oModelo.codigo_horariomateria)'" value="Editar" class="btn btn-default" />
            </td>

        </tr>

            }


        </table>

    </div>

</div>
