@model List<MVC_SEGURIDAD.Models.CRUD.ROLESvista>
@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consultar</h2>


<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Roles/Agregar")'" value="Nuevo" />
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
            </tr>

            @foreach (var oModelo in Model)
            {
                <tr>
                    <td>@oModelo.CODROL</td>
                    <td>@oModelo.NOMROL</td>
                    <td>
                        <input type="button" onclick="document.location.href='@Url.Content("~/Roles/Delete/"+oModelo.CODROL)'" value="Eliminar" class="btn btn-danger" />
                        <input type="button" onclick="document.location.href='@Url.Content("~/Roles/Actualizar/"+oModelo.CODROL)'" value="Editar" class="btn btn-default" />
                    </td>

                </tr>

            }


        </table>
    </div>
</div>


